<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsp.blog.mapper.MessageMapper">
	<resultMap id="BaseResultMap" type="com.hsp.blog.pojo.Message">
		<id column="message_id" property="messageId" jdbcType="INTEGER" />
		<result column="message_type" property="messageType" jdbcType="CHAR" />
		<result column="is_use" property="isUse" jdbcType="CHAR" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="url" property="url" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="VARCHAR" />
		<result column="user_id" property="userId" jdbcType="INTEGER" />
		<result column="msg_color" property="msgColor" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="addMessage" parameterType="Message">
		INSERT INTO message (
		message_type,
		is_use,
		title,
		content,
		url,
		create_time,
		user_id,
		msg_color
		)
		VALUES(
		#{messageType},
		#{isUse},
		#{title},
		#{content},
		#{url},
		now(),
		#{userId},
		#{msgColor}
		)
	</insert>

	<select id="getMessageListByParams" parameterType="com.hsp.core.HMap"
		resultMap="BaseResultMap">
		SELECT * FROM message WHERE 1=1
		<if test="messageId !=null">
			AND message_id=#{messageId}
		</if>
		<if test="messageType !=null">
			AND message_type=#{messageType}
		</if>
		<if test="isUse !=null">
			AND is_use=#{isUse}
		</if>
		<if test="title !=null">
			AND title=#{title}
		</if>
		<if test="content !=null">
			AND content=#{content}
		</if>
		<if test="url !=null">
			AND url=#{url}
		</if>
		<if test="createTime !=null">
			AND create_time=#{createTime}
		</if>
		<if test="userId !=null">
			AND user_id=#{userId}
		</if>
		<if test="sort !=null and order != null">
			ORDER BY #{sort} #{order}
		</if>
		<if test="isPagination == true">
			LIMIT #{start},#{size}
		</if>
	</select>

	<update id="updateMessage" parameterType="Message">
		UPDATE messgae
		SET
		<trim suffix="" suffixOverrides=",">
			<if test="messageType !=null">
				message_type=#{messageType},
			</if>
			<if test="isUse !=null">
				is_use=#{isUse},
			</if>
			<if test="title !=null">
				title=#{title},
			</if>
			<if test="content !=null">
				content=#{content},
			</if>
			<if test="url !=null">
				url=#{url},
			</if>
			<if test="createTime !=null">
				create_time=#{createTime},
			</if>
			<if test="userId !=null">
				user_id=#{userId}
			</if>
		</trim>
		where messgae_id=#{messageId}
	</update>
	
	<delete id="deleteMessageById" parameterType="String">
		DELETE FROM message WHERE message_id=#{messageId}
	</delete>
</mapper>