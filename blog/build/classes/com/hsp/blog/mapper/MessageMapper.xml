<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsp.blog.mapper.MessageMapper" >
  <resultMap id="BaseResultMap" type="com.hsp.blog.pojo.Message" >
    <id column="message_id" property="messageId" jdbcType="INTEGER" />
    <result column="message_type" property="messageType" jdbcType="CHAR" />
    <result column="is_use" property="isUse" jdbcType="CHAR" />
    <result column="title" property="title" jdbcType="VARCHAR" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="url" property="url" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="user_id" property="userId" jdbcType="INTEGER" />
    <result column="msg_color" property="msgColor" jdbcType="VARCHAR" />
  </resultMap>
  
  <select id="getMessageListByParams" parameterType="com.hsp.core.HMap" resultMap="BaseResultMap">
  	SELECT * FROM message WHERE 1=1
  		<if test="messageId !=null">
  			AND message_id=#{messageId}
  		</if>
  		<if test="messageType !=null">
  			AND message_type=#{messageType}
  		</if>
  		<if test="isUse !=null">
  			AND is_use=#{isUse}
  		</if>
  		<if test="title !=null">
  			AND title=#{title}
  		</if>
  		<if test="content !=null">
  			AND content=#{content}
  		</if>
  		<if test="url !=null">
  			AND url=#{url}
  		</if>
  		<if test="createTime !=null">
  			AND create_time=#{createTime}
  		</if>
  		<if test="userId !=null">
  			AND user_id=#{userId}
  		</if>
  		<if test="sort !=null and order != null">
  			ORDER BY #{sort} #{order}
  		</if>
  		<if test="isPagination == true">
  			LIMIT #{start},#{size}
  		</if>
  </select>
</mapper>